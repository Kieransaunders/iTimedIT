{
  "name": "itimedit-monorepo",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev:web",
    "dev:web": "npm run dev --workspace=@itimedit/web",
    "dev:mobile": "npm run start --workspace=@itimedit/mobile",
    "build": "npm run build --workspace=@itimedit/web",
    "build:web": "npm run build --workspace=@itimedit/web",
    "build:mobile": "npm run build --workspace=@itimedit/mobile",
    "ios": "npm run ios --workspace=@itimedit/mobile",
    "android": "npm run android --workspace=@itimedit/mobile",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "install:all": "npm install && npm install --workspaces"
  },
  "dependencies": {
    "@convex-dev/auth": "^0.0.90",
    "@convex-dev/resend": "^0.1.13",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@revenuecat/purchases-js": "^1.14.0",
    "@sentry/react": "^10.17.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "convex": "^1.28.0",
    "expo": "~54.0.22",
    "lucide-react": "^0.544.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "~0.81.5",
    "react-native-svg": "15.12.1",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.1.0",
    "web-push": "^3.6.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.13.10",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.1.0",
    "@types/web-push": "^3.6.4",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "~10",
    "dotenv": "^16.4.7",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "jest": "^30.1.3",
    "npm-run-all": "^4.1.5",
    "postcss": "~8",
    "prettier": "^3.5.3",
    "tailwindcss": "~3",
    "ts-jest": "^29.4.3",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0"
  },
  "overrides": {
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "@types/react": "^19.2.0",
    "react-native-svg": "15.12.1",
    "expo": "~54.0.22",
    "expo-web-browser": "~15.0.9",
    "react-native-get-random-values": "~1.11.0"
  }
}
